<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_height="wrap_content"
    android1:layout_width="match_parent">

    <RelativeLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:padding="8dp"
        android1:gravity="center_vertical">

        <TextView
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:id="@+id/tvUrl"
            android1:layout_alignParentStart="true"
            android1:autoLink="web"
            android1:padding="8dp"
            android1:textSize="20sp"/>

        <TextView
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:id="@+id/tvDate"
            android1:layout_alignParentLeft="true"
            android1:layout_below="@+id/tvUrl"/>

        <ImageButton
            android1:id="@+id/btnDelete"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentEnd="true"
            android1:layout_centerVertical="true"
            android1:src="@android:drawable/ic_menu_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>